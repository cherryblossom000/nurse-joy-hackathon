{
  "name": "nurse-joy-hackathon-server",
  "version": "0.0.1",
  "private": true,
  "publishConfig": {
    "access": "restricted"
  },
  "type": "module",
  "engines": {
    "node": ">=16"
  },
  "main": "dist/index",
  "scripts": {
    "start": "node .",
    "dev": "nodemon .",
    "build": "tsc -b",
    "watch": "pnpm build -- -w",
    "lint": "eslint --max-warnings 0 --cache . --ext ts",
    "format": "prettier -w --ignore-path ../.prettierignore .",
    "init-db": "mkdir db",
    "start-db": "mongod --dbpath db"
  },
  "dependencies": {
    "@koa/router": "^10.1.0",
    "dotenv": "^10.0.0",
    "koa": "^2.13.1",
    "koa-static": "^5.0.0",
    "mongodb": "^4.1.0"
  },
  "devDependencies": {
    "@types/koa": "^2.13.4",
    "@types/koa-static": "^4.0.2",
    "@types/koa__router": "^8.0.7",
    "@types/node": "^16.6.1",
    "nodemon": "^2.0.12"
  }
}
