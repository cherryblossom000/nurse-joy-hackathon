{
  "name": "@nurse-joy-hackathon/server",
  "version": "0.0.1",
  "private": true,
  "publishConfig": {
    "access": "restricted"
  },
  "type": "module",
  "engines": {
    "node": ">=12"
  },
  "main": "dist/index",
  "scripts": {
    "start": "node .",
    "dev": "nodemon .",
    "build": "tsc -b",
    "watch": "pnpm build -- -w",
    "lint": "eslint --max-warnings 0 --cache . --ext ts",
    "format": "prettier -w --ignore-path ../.prettierignore '**/*.{cjs,ts}'",
    "init-db": "mkdir db",
    "start-db": "mongod --dbpath db"
  },
  "dependencies": {
    "@koa/router": "^10.1.0",
    "@nurse-joy-hackathon/shared": "*",
    "dotenv": "^10.0.0",
    "fp-ts": "^2.11.1",
    "io-ts": "^2.2.16",
    "koa": "^2.13.1",
    "koa-basic-auth": "^4.0.0",
    "koa-bodyparser": "^4.3.0",
    "koa-logger": "^3.2.1",
    "koa-static": "^5.0.0",
    "mongodb": "^4.1.0",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "@types/koa": "^2.13.4",
    "@types/koa-basic-auth": "^2.0.4",
    "@types/koa-bodyparser": "^4.3.3",
    "@types/koa-logger": "^3.1.1",
    "@types/koa-static": "^4.0.2",
    "@types/koa__router": "^8.0.7",
    "@types/node": "^16.6.1",
    "@types/uuid": "^8.3.1",
    "nodemon": "^2.0.12"
  }
}
