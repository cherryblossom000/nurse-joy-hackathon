{
  "name": "nurse-joy-hackathon",
  "version": "0.0.1",
  "private": true,
  "publishConfig": {
    "access": "restricted"
  },
  "license": "MIT",
  "workspaces": [
    "client",
    "shared",
    "server"
  ],
  "type": "module",
  "scripts": {
    "start": "yarn --cwd server start",
    "build": "yarn --cwd shared build && yarn --cwd client build && sed -i 's/\\* as t/t/' shared/dist/index.js && yarn --cwd server build",
    "watch": "pnpm m run watch",
    "lint": "eslint --max-warnings 0 --cache . --ext js,ts,svelte",
    "format": "prettier -w '**/*.{cjs,ts,svelte}'",
    "init-database": "pnpm -C server init-database",
    "start-datbase": "pnpm -C server start-database"
  },
  "devDependencies": {
    "@cherryblossom/eslint-config": "15.0.0-beta.13",
    "@types/eslint": "^7.28.0",
    "@typescript-eslint/eslint-plugin": "^4.29.2",
    "@typescript-eslint/parser": "^4.29.2",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-compat": "^3.12.0",
    "eslint-plugin-eslint-comments": "^3.2.0",
    "eslint-plugin-import": "^2.24.0",
    "eslint-plugin-jsdoc": "^36.0.7",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^3.4.0",
    "eslint-plugin-promise": "^5.1.0",
    "eslint-plugin-svelte3": "^3.2.0",
    "eslint-plugin-unicorn": "^35.0.0",
    "node": "16",
    "prettier": "^2.3.2",
    "prettier-plugin-svelte": "^2.3.1",
    "svelte": "^3.42.1",
    "typescript": "^4.3.5"
  }
}
